<resources>
  <style name="$safeprojectname$" parent="$safeprojectname$.Base">
  </style>
  <!-- Base theme applied regardless of API level -->
  <style name="$safeprojectname$.Base" parent="Theme.AppCompat.Light.DarkActionBar">
    <!-- If you are using revision 22.1, use 'windowNoTitle' without 'android:' -->
    <item name="windowNoTitle">true</item>
    <!-- If you're using the toolbar, no need to show ActionBar -->
    <item name="windowActionBar">false</item>
    <!-- Set theme colors from http://www.google.com/design/spec/style/color.html#color-color-palette -->
    <!-- colorPrimary is used for the default action bar background -->
    <item name="colorPrimary">@color/Cyan</item>
    <!-- colorPrimaryDark is used for the status bar -->
    <item name="colorPrimaryDark">@color/DarkCyan</item>
    <!-- colorAccent is used as the default value for colorControlActivated which is used to tint widgets -->
    <!-- You can also set colorControlNormal, colorControlActivated colorControlHighlight, and colorSwitchThumbNormal -->
    <item name="colorAccent">@color/DarkCyan</item>
    <item name="windowActionModeOverlay">false</item>
    <item name="android:fitsSystemWindows">true</item>
  </style>
</resources>